<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- define bean holaMundoBean -->
	<bean id="hola1"
		class="com.truper.spring.core.practica2.bean.HolaMundo">
		
		<!-- property utiliza inyeccion por setter, por tanto el setter debe existir -->
		<property name="mensaje" value="Hola mundo" />
		
	</bean>

	<!-- define bean holaMundoBean2 -->
	<bean id="hola2"
		class="com.truper.spring.core.practica2.bean.HolaMundo">
		
		<!-- constructor-arg utiliza inyeccion por constructor, por tanto el constructor 
			con 1 argumento debe existir -->
		<constructor-arg value="Hola mundo" />
		
	</bean>

</beans>
